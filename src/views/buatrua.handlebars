<div class="section-title">
  <h2>Bữa Trưa</h2>
</div>
<div class="mt-4">
  <div class="row">
    {{#each user}}
    <div class="col-sm-6 col-lg-4">
      <div class="card card-course-item" data-slug="{{this.SLUG}}" data-name="{{this.NAME}}" data-image="{{this.IMAGE}}" data-title="{{this.TITLE}}">
        <a href="/BuaTrua/{{this.SLUG}}">
          <img class="card-img-top" src="{{this.IMAGE}}" alt="{{this.NAME}}">
        </a>
        <div class="card-body">
          <a href="/BuaTrua/{{this.SLUG}}">
            <h5 class="card-title">{{this.NAME}}</h5>
          </a>
          <p class="card-text">{{this.TITLE}}.</p>
          <div class="blockheart" data-slug="{{this.SLUG}}" data-name="{{this.NAME}}" data-image="{{this.IMAGE}}" data-title="{{this.TITLE}}">
            <div class="heart"></div>
            <div class="animation-heart"></div>
          </div>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
  <script src="/js/favourite-food-lunch.js"></script>